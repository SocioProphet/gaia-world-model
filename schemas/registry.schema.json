{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "properties": {
    "attribution": {
      "properties": {
        "authors": {
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "type": "array"
        },
        "notices": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "source": {
          "type": "string"
        }
      },
      "required": [
        "source",
        "authors"
      ],
      "type": "object"
    },
    "content_hash": {
      "type": "string"
    },
    "id": {
      "minLength": 3,
      "type": "string"
    },
    "interfaces": {
      "properties": {
        "inputs": {
          "items": {
            "properties": {
              "constraints": {
                "type": "object"
              },
              "crs": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "schema_ref": {
                "type": "string"
              },
              "units": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "schema_ref"
            ],
            "type": "object"
          },
          "type": "array"
        },
        "outputs": {
          "items": {
            "properties": {
              "constraints": {
                "type": "object"
              },
              "crs": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "schema_ref": {
                "type": "string"
              },
              "units": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "schema_ref"
            ],
            "type": "object"
          },
          "type": "array"
        },
        "protocols": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "runtime": {
          "type": "object"
        }
      },
      "required": [
        "inputs",
        "outputs"
      ],
      "type": "object"
    },
    "kind": {
      "enum": [
        "dataset",
        "ontology",
        "tool",
        "model",
        "agent",
        "workflow"
      ],
      "type": "string"
    },
    "license": {
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "type": "array"
    },
    "policy": {
      "properties": {
        "consent_class": {
          "type": "string"
        },
        "locality": {
          "type": "object"
        },
        "redactions": {
          "type": "object"
        },
        "risk_tier": {
          "enum": [
            "low",
            "med",
            "high"
          ],
          "type": "string"
        },
        "visibility": {
          "enum": [
            "public",
            "restricted",
            "private"
          ],
          "type": "string"
        }
      },
      "type": "object"
    },
    "provenance": {
      "properties": {
        "lineage": {
          "items": {
            "type": "object"
          },
          "type": "array"
        },
        "origin": {
          "properties": {
            "pinned_ref": {
              "type": "string"
            },
            "retrieved_at": {
              "type": "string"
            },
            "url": {
              "type": "string"
            }
          },
          "required": [
            "url",
            "pinned_ref",
            "retrieved_at"
          ],
          "type": "object"
        },
        "prov_bundle": {
          "type": "string"
        }
      },
      "required": [
        "origin"
      ],
      "type": "object"
    },
    "trust": {
      "properties": {
        "attestations": {
          "items": {
            "type": "object"
          },
          "type": "array"
        },
        "reputation": {
          "type": "object"
        },
        "signatures": {
          "items": {
            "type": "object"
          },
          "type": "array"
        }
      },
      "type": "object"
    },
    "version": {
      "minLength": 1,
      "type": "string"
    },
    "schema_bundle": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "salad_ref": {
          "type": "string"
        },
        "hash_alg": {
          "type": "string",
          "enum": [
            "sha3-256"
          ]
        },
        "schema_id": {
          "type": "string",
          "pattern": "^sha3-256:[0-9a-f]{64}$"
        },
        "context_id": {
          "type": "string",
          "pattern": "^sha3-256:[0-9a-f]{64}$"
        },
        "canonicalization": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "json_c14n": {
              "type": "string"
            },
            "avro_map_order": {
              "type": "string",
              "enum": [
                "lexicographic"
              ]
            }
          },
          "required": [
            "avro_map_order"
          ]
        }
      },
      "required": [
        "salad_ref",
        "hash_alg",
        "schema_id",
        "context_id",
        "canonicalization"
      ]
    },
    "wires": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "tritrpc",
              "grpc",
              "http",
              "kafka",
              "file"
            ]
          },
          "profile": {
            "type": "string",
            "enum": [
              "path-a"
            ]
          },
          "payload_encoding": {
            "type": "string",
            "enum": [
              "avro-binary"
            ]
          },
          "service": {
            "type": "string"
          },
          "method": {
            "type": "string"
          },
          "schema_id": {
            "type": "string",
            "pattern": "^sha3-256:[0-9a-f]{64}$"
          },
          "context_id": {
            "type": "string",
            "pattern": "^sha3-256:[0-9a-f]{64}$"
          }
        },
        "required": [
          "type"
        ],
        "allOf": [
          {
            "if": {
              "properties": {
                "type": {
                  "const": "tritrpc"
                }
              },
              "required": [
                "type"
              ]
            },
            "then": {
              "required": [
                "profile",
                "payload_encoding",
                "service",
                "method",
                "schema_id",
                "context_id"
              ]
            }
          }
        ]
      }
    }
  },
  "required": [
    "id",
    "version",
    "kind",
    "license",
    "attribution",
    "interfaces",
    "provenance"
  ],
  "title": "GAIA Registry Manifest",
  "type": "object"
}
